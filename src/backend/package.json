{
  "name": "todo-backend",
  "version": "1.0.0",
  "description": "todo list backend",
  "main": "src/main.ts",
  "author": "Myriad-Dreamin",
  "license": "MIT",
  "private": true,
  "scripts": {
    "prebuild": "rimraf out-tsc",
    "build": "nest build",
    "gyp-build": "node-gyp configure && node-gyp build",
    "gyp-build:debug": "node-gyp configure && make BUILDTYPE=Debug -C build",
    "gyp-build:bear": "rimraf build && node-gyp configure && bear make BUILDTYPE=Debug -C build",
    "cloc": "cloc --exclude-dir=$(tr '\\n' ',' < .clocignore) .",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "cross-env NODE_ENV=development nest start",
    "start:dev": "cross-env NODE_ENV=development nest start --watch",
    "start:debug": "cross-env NODE_ENV=development nest start --debug --watch",
    "start:prod": "cross-env NODE_ENV=production node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.1.1",
    "@types/node": "^16.9.6",
    "@types/pino": "^6.3.11",
    "@types/pino-http": "^5.8.0",
    "cross-env": "^7.0.3"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "//tsconfig": "https://huafu.github.io/ts-jest/user/config/",
        "tsconfig": "./tsconfig.spec.json"
      }
    },
    "testEnvironment": "node",
    "moduleNameMapper": {
      "@/(.*)": "<rootDir>/src/$1",
      "@config/(.*)": "<rootDir>/src/config/$1",
      "@lib/(.*)": "<rootDir>/src/lib/$1",
      "@proto/(.*)": "<rootDir>/src/proto/$1",
      "@test/(.*)": "<rootDir>/test/$1"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "roots": [
      "src",
      "test"
    ],
    "transform": {
      "(src|test)[\\\\/].+\\.[jt]s$": "ts-jest"
    },
    "testRegex": ".*\\.spec\\.ts$",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.(t|j)s"
    ]
  },
  "dependencies": {
    "@nestjs/common": "^8.0.7",
    "@nestjs/core": "^8.0.7",
    "@nestjs/platform-express": "^8.0.7",
    "js-yaml": "^4.1.0",
    "nestjs-pino": "^2.2.0",
    "pino": "^6.13.3",
    "pino-http": "^5.8.0"
  }
}
